@model Proiect_Forum.Models.Category

<form method="post" action="/Categories/Edit/@Model.CategoryId">
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <br />
    @Html.HiddenFor(m => m.CategoryId)

    @Html.Label("Title", "Category title")
    <br />

    @Html.TextBox("Title", null, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Title, null, new { @class = "text-danger" })
    <br /><br />

    @Html.Label("Description", "Description content")
    <br />

    @Html.TextArea("Description", null, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Description, null, new { @class = "text-danger" })
    <br /><br />
    <button class="btn btn-sm btn-success" type="submit">Submit changes</button>
</form>