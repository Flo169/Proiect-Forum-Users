@model Proiect_Forum_Users.Models.ApplicationUser

@{
    ViewBag.Title = "User details";
}

<ol class="breadcrumb">
    <li><h3>@ViewBag.Title</h3></li>
</ol>

<div class="panel-heading">User name: @Model.UserName</div>

<div class="panel-body">

    <i class="glyphicon glyphicon-envelope"></i> Email: <span class="label label-default">@Model.Email</span>
    <br />
    <i class="glyphicon glyphicon-th-list"></i> User role: @ViewBag.roleName

    <br /><br />

    @if (@Model.PhoneNumber != null)
    {
        <i class="glyphicon glyphicon-phone"></i>@:Phone number:<span class="label label-default">@Model.PhoneNumber</span>
    }

</div>

@if ((string)Model.Id != ViewBag.utilizatorCurent && User.IsInRole("Admin"))
{
    <div class="panel-footer">
        @using (Html.BeginForm(actionName: "Delete", controllerName: "Users", routeValues: new { id = @Model.Id }))
        {
            @Html.HttpMethodOverride(HttpVerbs.Delete)
            <br />
            <button class="btn btn-danger" type="submit">Delete user</button>
        }
    </div>
}
